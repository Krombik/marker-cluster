{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "types": ["node"]
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist", "example"],
  "ts-node": {
    "esm": true,
    "files": true,
    "compilerOptions": { "noImplicitAny": false, "noImplicitThis": false }
  }
}
